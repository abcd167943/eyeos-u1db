#!/bin/bash

PID_FILE=/var/run/serverOauth.pid

start(){
 if [ -f $PID_FILE ];
 then
     echo -e -n "\nServer Oauth is running\n"
 else
    echo -e -n "\nStarting server Oauth\n"
    python /usr/local/src/serverOauth/serverOauth.py 1> /dev/null
    RETVAL=$?
 fi
}

stop(){
 if [ -f $PID_FILE ];
 then
    echo -e -n "\nStopping server Oauth\n"
    PID=$(cat $PID_FILE)
    kill -9 ${PID}
    rm $PID_FILE
    RETVAL=$?
 else
    echo -e -n "\nServer Oauth is not running\n"
 fi
}

restart(){
 stop
 sleep 5
 start
}

status(){
    if [ -f $PID_FILE ]; then
        echo -e -n "\nServer Oauth is running\n"
    else
        echo -e -n "\nServer Oauth is not running\n"
    fi
}

# Dependiendo del parametro que se le pase
#start - stop - restart ejecuta la funci√≥n correspondiente.
case "$1" in
start)
 start
 ;;
stop)
 stop
 ;;
restart)
 restart
 ;;
status)
 status
 ;;
*)
 echo $"Usar: $0 {start|stop|restart|status}"
 exit 1
esac

exit 0